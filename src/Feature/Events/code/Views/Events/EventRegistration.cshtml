@using Sitecore.Feature.Events.Model
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@model ListContact
@{ 
    var emailPlaceholder = string.IsNullOrEmpty(Model.Email) ? "Email" : Model.Email;
}
@using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post))
{
    @Html.Sitecore().FormHandler("Events", "RegisterToEventAdd")
    <div class="form-group">
        <input type="hidden" id="sitecoreitemid" name="sitecoreitemid" value="@Model.SitecoreItemId" />
        <input type="hidden" id="listname" name="listname" value="@Model.ListName" />
    </div>


    <div class="form-group">
        <label for="exampleInputEmail1">@DictionaryRepository.Get("/Events/Registration/Email", "Email address")</label>
        <input type="email" class="form-control" id="email" name="email"  placeholder='@emailPlaceholder'>
    </div>



        <button type="submit" class="btn btn-primary">@DictionaryRepository.Get("/Events/Registration/Register", "Register")</button>
}